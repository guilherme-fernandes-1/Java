import java.util.Scanner;
public class Aula7Ex1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("--- Calculadora de Salário ---");
        System.out.print("Digite o salário atual: ");
        double salarioAtual = scanner.nextDouble();

        System.out.println("\nCódigos de Cargo:");
        System.out.println("1 - Escriturário");
        System.out.println("2 - Secretário");
        System.out.println("3 - Caixa");
        System.out.println("4 - Gerente");
        System.out.println("5 - Diretor");
        System.out.print("Digite o código do cargo: ");
        int codigoCargo = scanner.nextInt();

        double percentualAumento = 0.0;
        String nomeCargo = "";

        // O switch deve estar dentro do método main
        switch (codigoCargo) {
            case 1:
                percentualAumento = 0.50;
                nomeCargo = "Escriturário";
                break;
            case 2:
                percentualAumento = 0.35;
                nomeCargo = "Secretário";
                break;
            case 3:
                percentualAumento = 0.20;
                nomeCargo = "Caixa";
                break;
            case 4:
                percentualAumento = 0.10;
                nomeCargo = "Gerente";
                break;
            case 5:
                percentualAumento = 0.00;
                nomeCargo = "Diretor";
                break;
            default:
                System.out.println("Código de cargo inválido.");
                scanner.close();
                return;
        }

        double valorAumento = salarioAtual * percentualAumento;
        double novoSalario = salarioAtual + valorAumento;

        System.out.println("\n--- Resultado ---");
        System.out.printf("Cargo: %s%n", nomeCargo);
        System.out.printf("Salário Atual: R$ %.2f%n", salarioAtual);
        System.out.printf("Valor do Aumento: R$ %.2f%n", valorAumento);
        System.out.printf("Novo Salário: R$ %.2f%n", novoSalario);

        scanner.close();
    } 
}
